    <script>

        let displayResponse = document.querySelector(".userGuess");
        let guessedresponse = document.querySelector(".response");
            displayResponse.textContent = "Can you guess the correct Hoosier Lottery numbers?";

                let randomNum = Math.floor(Math.random() * 49 ) + 1;     
                console.log(randomNum)  

                    let count = 6;
                        while (count > 0) 
                        {     
                            count--;

                                guess = prompt("Give me a number between 1 and 49, you have six tries. Here is a hint, the answer is " + randomNum);
                                guess = parseInt(guess);
            
                                    if ((isNaN(guess))) {
                                        alert("You have to use numbers only")
                        }
                                    else if (guess == randomNum) {    
                                        alert("CORRECT!")
                                            break             
                        }
                                    else if (guess < randomNum) {                 
                                        alert("Your number was too low, please try again!");
                        } 
                                    else if (guess > randomNum) {  
                                        alert("Your number was too high, please try again!");
                        } 
                                    else { 
                            
                        }   


                        }

            guessedresponse.textContent = "You guessed  " + guess;
    
    </script>
